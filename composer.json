{
	"name": "altis/enhanced-search",
	"description": "Enhanced Search module for Altis",
	"type": "library",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Human Made",
			"email": "hello@humanmade.com"
		}
	],
	"require": {
		"php": ">=7.1",
		"10up/elasticpress": "4.0.1",
		"humanmade/debug-bar-elasticpress": "~1.6.3",
		"openeuropa/composer-artifacts": "^1.0 || ^2.0"
	},
	"autoload" : {
		"files": [
			"inc/namespace.php",
			"inc/analysis/namespace.php",
			"inc/packages/namespace.php"
		]
	},
	"extra": {
		"altis": {
			"install-overrides": [
				"10up/elasticpress",
				"humanmade/debug-bar-elasticpress"
			]
		},
		"artifacts": {
            "10up/elasticpress": {
				"dist": {
					"url": "https://github.com/10up/ElasticPress/releases/download/{version}/{project-name}-{version}.zip",
					"type": "zip"
				}
            }
        }
	}
}
